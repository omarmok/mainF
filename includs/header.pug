#mainBanner.carousel.slide(data-ride='carousel')
  ol.carousel-indicators
    li.active(data-target='#mainBanner', data-slide-to='0')
    li(data-target='#mainBanner', data-slide-to='1')
    li(data-target='#mainBanner', data-slide-to='2')
  .carousel-inner
    .carousel-item.active
      img.d-block.w-100(src='assets/images/newsImg.png', alt='First slide')
    .carousel-item
      img.d-block.w-100(src='assets/images/dinMainBG.png', alt='Second slide')
    .carousel-item
      img.d-block.w-100(src='assets/images/newsImg.png', alt='Third slide')
